<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextView">
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="TitleTextViewMargin">
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="ButtonCoffeeStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/coffee_color</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonUnableStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#26E6D5B7</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonEnableStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#26E6D5B7</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonGoogleLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTransparentRoundStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/coffee_color</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonWhiteTransparentRoundStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>

    <style name="SearchView.Theme" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="searchHintIcon">@drawable/vector_search_icon</item>
        <item name="goIcon">@drawable/vector_search_icon</item>
        <item name="icon">@drawable/vector_search_icon</item>
        <item name="iconSize">5dp</item>
        <item name="android:textColorSecondary">#989898</item>
    </style>

    <style name="ItemAdapterFirstTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#BFE6D5B7</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="ItemAdapterSecondTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomTextAppearanceTabItem" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearanceTabItem</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomImageButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomSwitchButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomLowWhiteText">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomLowText">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            #FEFEF9
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomLowBlackText">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #3B2F23
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomText">
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:textColor">
            #FEFEF9
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomTextDuration">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #E6D5B7
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="CustomStartText">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #FEFEF9
        </item>
        <item name="android:fontFamily">@font/source_serif_pro_italic</item>
    </style>

    <style name="CustomGrayText">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #80FEFEF9
        </item>
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>
</resources>